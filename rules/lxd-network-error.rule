name: MAASLXDNetworkError
expr: |
  rate(
    {job=~"maas-audit",maas_module="drivers.pod.lxd"}
    |~ "Pod \\+S: Failed to connect to the LXD REST API."
    [1m]
  )
for: 0m
labels:
  severity: error
annotations:
  summary: "LXD Network Error"
  description: "MAAS is unable to reach the LXD REST API."
