name: MAASIncompatibleStorageLayout
expr: |
  rate(
    {job=~"maas-audit",maas_module="machine.action"}
    |~ "\{\"storage\": [\\+S]\}"
    [1m]
  )
for: 0m
labels:
  severity: warning
annotations:
  summary: "Incompatible storage layout"
  description: "An incompatible storage layout is preventing a machine from being deployed"
